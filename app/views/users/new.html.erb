<%= render 'shared/content_title', title: 'Register' %>

<div class='well'>
  <%= form_for @user do |f| %>
  <%= render 'shared/errors', obj: @user %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class='control-group'>
      <%= f.label :phone, "Phone Number <small>(numbers only)</small>".html_safe %>
      <%= f.text_field :phone, maxlength: 9 %>
      <%= link_to '#', id: 'two_factor_phone' do %>
        <i class='icon-question-sign'></i>  
      <% end %>
    </div>
    <%= f.submit "Register", class: 'btn btn-success' %>
  <% end %>
</div>